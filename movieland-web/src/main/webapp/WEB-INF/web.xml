<web-app>
    <!--LISTENER-->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!--SERVLET-->
    <servlet>
        <servlet-name>rest-v1</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>rest-v1</servlet-name>
        <url-pattern>/v1/*</url-pattern>
    </servlet-mapping>

    <!--FILTER-->
    <filter>
        <filter-name>rest-v1-security-filter</filter-name>
        <filter-class>com.khrushch.movieland.rest.v1.filter.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>rest-v1-security-filter</filter-name>
        <url-pattern>/v1/*</url-pattern>
    </filter-mapping>

</web-app>